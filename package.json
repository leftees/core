{
  "name": "ljve.io",
  "version": "0.4.0",
  "description": "Live Javascript Virtualized Environment",
  "author": "Marco Minetti <marco.minetti@novetica.org>",
  "contributors": [],
  "bin":{
    "ljve": "./main.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/novetica/ljve.io"
  },
  "bugs": {
    "url": "https://github.com/novetica/ljve.io/issues"
  },
  "keywords": [
    "ljve",
    "ljve.io"
  ],
  "dependencies": {
  	"mocha": "*",
    "chai": "*",
    "blanket": "*",
    "coveralls": "*",
    "mocha-lcov-reporter": "*",
    "yargs": "*",
    "cli-color":"*",
    "ws": "*",
    "xmlhttprequest": "*",
    "webworker-threads": "*",
    "ncp": "*",
    "underscore": "*"
  },
  "scripts": {
    "test": "NODE_ENV=test ./node_modules/mocha/bin/mocha -u bdd -r blanket -R mocha-lcov-reporter test.js | ./node_modules/coveralls/bin/coveralls.js"
  },
  "config":{
    "blanket": {
      "pattern": [ "core", "app" ],
      "data-cover-never": "node_modules",
      "data-cover-reporter-options": {
        "shortnames": false
      }
    }
  },
  "gypfile": true,
  "preferGlobal": true,
  "private": false,
  "analyze": true,
  "license": "GPL"
}

